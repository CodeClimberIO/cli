{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "../server/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

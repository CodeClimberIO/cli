{
  "name": "code-climbers",
  "productName": "Code Climbers",
  "version": "1.0.0",
  "description": "The Code Climbers CLI",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  ],
  "scripts": {
    "build:app": "cd ./src/app && npm run build",
    "build:server": "cd ./src/server && npm run build",
    "build:command": "cd ./src/commands && tsc -b",
    "install:all": "npm i ./src/app && npm i ./src/server && npm i",
    "build": "shx rm -rf dist && npm run install:all && npm run build:app && npm run build:server && npm run build:command",
    "dev:server": "tsc-watch --noClear --onSuccess \"npm run start\"",
    "dev:app": "vite",
    "start": "npm run copy && node dist/index.js --inspect",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:migrate": "knex migrate:latest",
    "db:migrate:make": "knex migrate:make"
  },
  "dependencies": {
    "@oclif/core": "^4.0.12",
    "cli-app": "file:src/app",
    "cli-server": "file:src/server",
    "server": "file:dist/server"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.0.0",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.13.0",
    "vite": "^5.3.1"
  },
  "keywords": [],
  "author": {
    "name": "Paul Hovley",
    "email": "rphovley@gmail.com"
  },
  "files": [
    "/bin",
    "/dist"
  ],
  "bin": {
    "codeclimbers": "./bin/run.js"
  },
  "oclif": {
    "bin": "codeclimbers",
    "commands": "./dist/commands",
    "dirname": "codeclimbers",
    "topicSeparator": ":"
  }
}
